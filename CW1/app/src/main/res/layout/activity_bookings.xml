<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookings">

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="88dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:text="@string/vBookHead"
        android:textColor="#E91149"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="346dp"
        android:layout_height="242dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/my_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/shepherds"
            android:layout_width="180dp"
            android:layout_height="131dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.855"
            app:srcCompat="@drawable/shepherds" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="345dp"
            android:layout_height="59dp"
            android:background="@drawable/my_border"
            android:gravity="center"
            android:text="Shepherds Hut"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fromDateText"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_border"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/shepherds"
            app:layout_constraintTop_toTopOf="@+id/shepherds" />

        <TextView
            android:id="@+id/toDateText"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/my_border"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/shepherds"
            app:layout_constraintStart_toEndOf="@+id/shepherds"
            app:layout_constraintTop_toBottomOf="@+id/fromDateText"
            app:layout_constraintVertical_bias="0.225" />


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Your latest booking is:"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.959" />

</android.support.constraint.ConstraintLayout>