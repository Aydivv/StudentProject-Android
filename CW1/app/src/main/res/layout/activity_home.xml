<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@color/white">

    <TextView
        android:id="@+id/head"
        android:layout_width="235dp"
        android:layout_height="67dp"
        android:background="@drawable/my_border"
        android:text="@string/farmbnbheading"
        android:gravity="center_horizontal"
        android:textColor="#E91149"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/viewBookingBtn"
        android:layout_width="295dp"
        android:layout_height="173dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/my_border"
        android:text="@string/vBookingBtn"
        android:textColor="#e91149"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="vBooking"/>

    <Button
        android:id="@+id/createBookingBtn"
        android:layout_width="295dp"
        android:layout_height="173dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/my_border"
        android:text="@string/cBookingBtn"
        android:textColor="#e91149"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBookingBtn"
        app:layout_constraintVertical_bias="0.161"
        android:onClick="cBooking"/>


</android.support.constraint.ConstraintLayout>