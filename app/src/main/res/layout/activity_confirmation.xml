<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:text="@string/confirmation"
        android:textColor="#E91149"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="211dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Payment Received."
        android:textColor="#000000"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="211dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:text="Your booking is:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="346dp"
        android:layout_height="242dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.579">

        <ImageView
            android:id="@+id/shepherds"
            android:layout_width="180dp"
            android:layout_height="131dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.855"
            app:srcCompat="@drawable/shepherds" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="345dp"
            android:layout_height="59dp"
            android:background="@drawable/my_border"
            android:gravity="center"
            android:text="Shepherds Hut"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fromConfirmDate"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/my_border"
            android:text="TextView"
            android:textColor="@color/black"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="@+id/shepherds"
            app:layout_constraintStart_toEndOf="@+id/shepherds"
            app:layout_constraintTop_toTopOf="@+id/shepherds"
            app:layout_constraintVertical_bias="0.206" />

        <TextView
            android:id="@+id/toConfirmDate"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/my_border"
            android:text="TextView"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/shepherds"
            app:layout_constraintStart_toEndOf="@+id/shepherds"
            app:layout_constraintTop_toTopOf="@+id/shepherds"
            app:layout_constraintVertical_bias="0.804" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="328dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Thank you for booking with us!\nWe hope you enjoy your stay."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_marginBottom="28dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:backgroundTint="#FFFFFF"
        android:onClick="goHome"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/homeicon"
        tools:ignore="SpeakableTextPresentCheck" />


</android.support.constraint.ConstraintLayout>